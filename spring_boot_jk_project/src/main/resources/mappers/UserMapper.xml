    <insert id="insertUser">
        <![CDATA[
			insert into users values (
			    #{username},
			    #{password},
			    1
			)
		]]>
    </insert>    
    <insert id="insertAuthorities">
        <![CDATA[
			insert into authorities values (
			    #{username},
			    'ROLE_USER'
			)
		]]>
    </insert>
    
    
    
    
</mapper>